{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules":{
    "no-console":{
      "severity": "none",
      "options":[
        "log"
      ]
    },
    "only-arrow-functions":[true,"allow-declarations","allow-named-functions"],
    "max-classes-per-file":[true,5]
  }
}
